<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.mycompany.warnapp.comments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="487dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="6dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint"
                android:text="Busqueda"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="68dp"
                android:layout_height="68dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="67dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Username"
                    tools:layout_editor_absoluteX="87dp"
                    tools:layout_editor_absoluteY="67dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="283dp"
                    android:layout_height="42dp"
                    android:text="La idea esta muy buena, pero a parte de agregar amigos me gustaria conectar con personas a ciertos km's alrededor y enterarme de las cosas que ahi estan pasando. Pensaba en &quot;autorizar&quot; 3 km alrededor (por ejemplo) y automaticamente conectar con gente que tambien 'autorizo&quot; lo mismo."
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="87dp"
                    tools:layout_editor_absoluteY="93dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="68dp"
        android:layout_height="68dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="153dp"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Username"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:text="muy buena herramienta, debe ser usada y difundida por las entidades publicas para que los ciudadanos colaboren con la prevención de violencia, desorden social, etc."
        android:textSize="10sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="272dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="68dp"
        android:layout_height="68dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="246dp"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Username"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:text="muy buena herramienta, debe ser usada y difundida por las entidades publicas para que los ciudadanos colaboren con la prevención de violencia, desorden social, etc."
        android:textSize="10sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="179dp" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

</android.support.constraint.ConstraintLayout>
